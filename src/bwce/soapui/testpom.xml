<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.tibco.bw</groupId>
	<artifactId>tibco.bw.sample.hystrix.address.ap.test</artifactId>
	<version>1.0.0</version>
	<packaging>pom</packaging>

	<pluginRepositories>
		<pluginRepository>
			<id>smartbear-sweden-plugin-repository</id>
			<url>http://www.soapui.org/repository/maven2/</url>
		</pluginRepository>
	</pluginRepositories>	

	<dependencies>
		<dependency>  
			<groupId>com.jgoodies</groupId>  
			<artifactId>forms</artifactId>  
			<version>1.0.7</version>  
		</dependency>
		<!-- https://mvnrepository.com/artifact/org.apache.httpcomponents/httpclient-->
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpclient</artifactId>
			<version>4.5.6</version>
		</dependency>
		<!-- https://mvnrepository.com/artifact/org.apache.httpcomponents/httpcore -->
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpcore</artifactId>
			<version>4.4.10</version>
		</dependency>
		<!-- https://mvnrepository.com/artifact/org.codehaus.groovy.modules.http-builder/http-builder -->
		<dependency>
			<groupId>org.codehaus.groovy.modules.http-builder</groupId>
			<artifactId>http-builder</artifactId>
			<version>0.6</version>
		</dependency>


	</dependencies>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>com.smartbear.soapui</groupId>
					<artifactId>soapui-maven-plugin</artifactId>
					<version>5.4.0</version>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>properties-maven-plugin</artifactId>
					<version>1.0.0</version>
					<configuration>
						<quiet>true</quiet>
						<!--files>
							<file>${project.basedir}/../../../env/${ENV_NAME}.properties</file>
							<file>${project.basedir}/../../env/${ENV_NAME}.properties</file>
							<file>${project.basedir}/env/${ENV_NAME}.properties</file>
						</files-->
						<properties>
						</properties>
					</configuration>
					<executions>
						<execution>
							<id>read-build-properties</id>
							<phase>initialize</phase>
							<goals>
								<goal>read-project-properties</goal>
							</goals>
						</execution>
						<execution>
							<id>set-system-properties</id>
							<phase>initialize</phase>
							<goals>
								<goal>set-system-properties</goal>
							</goals>
						</execution>
					</executions>	
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>com.smartbear.soapui</groupId>
				<artifactId>soapui-maven-plugin</artifactId>
				<version>5.4.0</version>
				<configuration>
					<projectFile>/tmp/../../tests/soapui/${APPLICATION_NAME}-soapui.xml</projectFile>
					<outputFolder>${project.build.directory}/reports</outputFolder>
					<junitReport>true</junitReport>
					<projectProperties>
						<value>basePath=${testBasePath}</value>
						<value>message=soapui tests via Maven.</value>
						<value>JenkinsJobCorrelationID=${BUILD_DISPLAY_NAME}</value>
						<value>JenkinsJobURL=${RUN_DISPLAY_URL}</value>
						<value>enviromentName=${ENV_NAME}</value>
						<value>port=${soapui_testPort}</value>
						<value>host=${soapui_testHost}</value>
						<value>reportFilePosition=${reportFilePosition}</value>
					</projectProperties>
					<testCaseProperty/>
					<testSuite>${Test_Kind}</testSuite> 
					<soapuiProperties>
						<property>
							<name>soapui.properties.NoJWTTC</name>
							<value>${Test_properties_FolderPath}esbassortmentsservice/${ENV_NAME}NoJWTTC.properties</value>
						</property>
						<property>
							<name>soapui.properties.K48TC</name>
							<value>${Test_properties_FolderPath}esbassortmentsservice/${ENV_NAME}K48TC.properties</value>
						</property>
						<property>
							<name>soapui.properties.K49TC</name>
							<value>${Test_properties_FolderPath}esbassortmentsservice/${ENV_NAME}K49TC.properties</value>
						</property>
						<property>
							<name>soapui.properties.NoAssertmentMainDeTC</name>
							<value>${Test_properties_FolderPath}esbassortmentsservice/${ENV_NAME}NoAssertmentMainDeTC.properties</value>
						</property>
						<property>
							<name>soapui.properties.SearchDocumentByScrollAPI</name>
							<value>${Test_properties_FolderPath}esbassortmentsservice/${ENV_NAME}SearchDocumentByScrollAPI.properties</value>
						</property>
						<property>
							<name>soapui.properties.ELSCreateAssortmentTC</name>
							<value>${Test_properties_FolderPath}esbassortmentsservice/${ENV_NAME}ELSCreateAssortmentTC.properties</value>
						</property>
						<property>
							<name>soapui.properties.ELSDeleteAssortmentTC</name>
							<value>${Test_properties_FolderPath}esbassortmentsservice/${ENV_NAME}ELSDeleteAssortmentTC.properties</value>
						</property>
					</soapuiProperties>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
